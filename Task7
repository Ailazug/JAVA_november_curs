package idea;

import java.util.Scanner;

public class Array {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.print("Введите количество элементов в массиве " );
        int s = in.nextInt();
        Scanner st = new Scanner(System.in);
        System.out.print("Введите наименования массива " );
        String r = st.next();
        String a[] = new String[s];
        int x = 5, y=7, z=11;
        System.out.println("Ваш массив "+r+ " состоит из " + s + " элементов"  + "\nВведите элементы массива" );
        for (int i = 0; i < a.length; i++){
            a[i] = String.valueOf(in.next());
            System.out.println(r +"["+ i + "] = " + a[i]);
        }
        boolean b = x == a.length||y == a.length||z == a.length;
        if (b)
        {
            System.out.println("Данное значение имеется в константах" );
        }
        else
        {
            System.out.println("Данного значения нет в константах" );
        }
    }
}
