package idea;

import java.util.Scanner;

public class Array {

    public static void main(String[] args) {
        Scanner in = new Scanner(System.in);
        System.out.print("Введите число " );
        int x = in.nextInt();
        int y = -1;
        int z = 0;
        for (int i = 0; i < x/2; i++ ){
            y=y+2;
            z=y+y;
            System.out.println(y + " " + z);
        }
        System.out.println(z);
    }
}
